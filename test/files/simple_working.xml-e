<?xml version="1.0"?>
<!DOCTYPE tsung SYSTEM "/usr/share/tsung/tsung-1.0.dtd" [] >
<tsung loglevel='info' dumptraffic='false'>
  <clients>
    <client host="localhost" use_controller_vm="true"/>
  </clients>
  <servers>
    <server host="localhost" port="8000" type="tcp"/>
  </servers>
  <load>
    <arrivalphase phase="1" duration="10" unit="minute">
      <users maxnumber="100" arrivalrate="4" unit="second"/>
    </arrivalphase>
    <arrivalphase  phase="2" duration="50" unit="minute">
      <users arrivalrate="10" unit="second"/>
    </arrivalphase>
  </load>
  <sessions>
    <session name="test1" probability="25" type="ts_http">
      <request>
        <http url="/api" version="1.1" method="GET"/>
      </request>
      <thinktime min="1" max="3" random="true"></thinktime>
      <request>
        <http url="/view/view1" version="1.1" method="DELETE"/>
      </request>
      <request>
        <match do="log" 
               when="nomatch">^{"success": "View 'view2' created"}$</match>
        <match do="log" when="nomatch">success</match>
        <http method="POST" url="/view?name=view2&amp;value=foo"
              version="1.1" />
      </request>
    </session>
    <session name="test2" probability="75" type="ts_http">
      <setdynvars 
          sourcetype="file" fileid="_pin.csv" delimiter=";" order="iter">
        <var name="pin" />
      </setdynvars>
      <setdynvars sourcetype="random_string" length="10">
        <var name="username" />
      </setdynvars>
      <setdynvars sourcetype="random_number" start="1000" end="9999">
        <var name="pass_code" />
      </setdynvars>
      <request subst="true">
        <http 
url="/user/create?username=%%username%%&amp;pass_code=%%pass_code%%&amp;pin=%%pin%%" 
            version="1.1" method="POST"/>
      </request>
    </session>
  </sessions>
</tsung>
